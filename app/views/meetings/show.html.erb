<%- model_class = Meeting -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:day) %></strong></dt>
  <dd><%= @meeting.day %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %></strong></dt>
  <dd><%= @meeting.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %></strong></dt>
  <dd><%= @meeting.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %></strong></dt>
  <dd><%= @meeting.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:codes) %></strong></dt>
  <dd><%= @meeting.codes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:map) %></strong></dt>
  <dd><%= link_to 'Map', url_for(@meeting.map), target: "_blank" %> </dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %></strong></dt>
  <dd><%= @meeting.notes %></dd>
</dl>

<% if current_user %>

<div class="form-actions">
  <div class="btn"><%= link_to t('.back', :default => t("helpers.links.back")), meetings_path  %></div>
  <div class="btn"><%= link_to t('.edit', :default => t("helpers.links.edit")), edit_meeting_path(@meeting) %></div>
  <div class="btn"><%= link_to t('.destroy', :default => t("helpers.links.destroy")), meeting_path(@meeting), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %></div>
</div>

<% end %>



