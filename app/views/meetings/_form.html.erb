<%= form_for @meeting, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :day, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :day, :class => 'text_field' %> <div class="inst"> Format:  Sunday, PM 08:00 -- The AM/PM MUST precede the time for chronological sort to work correctly</div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %> 
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %> <div class="inst"> If this is a chip meeting, include (chip) in the name, or in the Notes section below</div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :address, :class => 'text_area' %> <div class="inst"> Include as many details as possible to help people find the room where the meeting is:  name of building, floor, etc.</div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :codes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :codes, :class => 'text_field' %> 


      <div class="inst"> A sample code key ||
        Men = M,
        Women = W,
        Beginner = B,
        Closed = C,
        Open = O,
        Discussion = D,
        Hour-long = H,
        Speaker = SP,
        Espanol = E,
        Gay or Lesbian = G,
        Literature Study = L,
        Wheelchair Access = Wh,
        Young People = Y</div>
  
    </div>
  </div>
  <div class="control-group">
    <%= f.label :map, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :map, :class => 'text_field' %> <div class="inst"> Link to the map -- start with http:// </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :notes, :class => 'text_field' %> <div class="inst"> Any supplemental information pertinent to the meeting</div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                meetings_path, :class => 'btn-small' %>
  </div>
<% end %>